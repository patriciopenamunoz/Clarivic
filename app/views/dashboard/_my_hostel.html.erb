<div class="card">
  <div class="row no-gutters">
    <div class="col-auto">
      <%= image_tag my_hostel.principal_image.variant(resize: "200x150!") %>
    </div>
    <div class="col">
      <div class="card-block px-2">
        <div class="separator-1"></div>
        <h4 class="card-title"><%= my_hostel.name %></h4>
        <div class="card-body">
          <%= link_to dashboard_tenants_path(my_hostel), class: "btn btn-dark btn-sm" do %>
          <i class="fas fa-users"></i> Lista de inquilinos
          <% end %>
          <%= link_to "Modificar", edit_hostel_path(my_hostel), class: "btn btn-primary btn-sm" %>
          <%= link_to "Administrar caracteristicas", hostel_hostel_features_path(my_hostel), class: "btn btn-info btn-sm" %>
          <%= link_to "Administrar habitaciones", hostel_room_types_path(my_hostel), class: "btn btn-info btn-sm" %>
          <%= link_to "Eliminar", my_hostel, method: :delete, class: "btn btn-danger btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="separator-2"></div>
